<%
models.Website.projects.forEach(function(id, index) {
	var project = models.Projects[id];
	if(!project) return;
%>

<section id="project-<%= index+1 %>" class="project-highlight">	
	<div class="container">
		<div class="project-number project-number-large hidden-sm hidden-xs">
			<%= index + 1 %>
		</div>
		<!-- Project Header -->
		<div class="row project-header">					
			<div class="project-title">
				<span class="project-number visible-sm visible-xs">
					<%= index + 1 %>
				</span>
				<%= project.title %>
			</div>
			<div class="project-types">
				<% project.types.forEach(function(type) { %>
					<span class="project-type"><%= type %></span>
				<%}); %>
			</div>
		</div><!-- #/.project-header -->

		<!-- Project Body -->
		<div class="project-body">			
			<div class="row">
				<div class="col-md-4 col-md-offset-1 project-story">
					<%= project.story %>					
				</div>
				<div class="col-md-7 col-xs-12">
					<!-- Carousel -->			
					<div id="carousel-<%= id %>" class="carousel slide" data-ride="carousel">
						<!-- Indicators -->
						<ol class="carousel-indicators">
							<% project.images.forEach(function(d, i) { %>
								<li data-target="#carousel-<%= id %>" data-slide-to="<%= i %>" 
									class="<%= i ? '' : 'active' %>"></li>
							<% }); %>
						</ol> <!-- #/.indicators -->
						<!-- Wrapper for slides -->
						<div class="carousel-inner" role="listbox">
							<% project.images.forEach(function(image, i) { %>
							<div class="item <%= i ? '' : 'active' %>">
								<div class="carousel-image">
									<img src="static/<%= id %>/<%= image.src %>" alt="<%= image.alt || '' %>">
								</div>
								<div class="carousel-caption">
									<h3><%= image.alt || '' %></h3>
									<p><%= image.caption || '' %></p>
								</div>
							</div>
							<% }); %>
						</div> <!-- #/.slides -->
						<!-- Controls -->
						<a class="left carousel-control" href="#carousel-<%= id %>" role="button" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="right carousel-control" href="#carousel-<%= id %>" role="button" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
						<!-- #/.controls -->
					</div><!-- #/.carousel -->
				</div> <!-- #/.col -->				
			</div><!-- #/.row -->

			<div class="row project-links">
				<div class="col-md-4 col-md-offset-1 col-xs-12">
					<!-- Project Links -->
					<% if('download' in project.links) { %>
					<a href="<%= project.links.download %>" class="btn btn-success btn-lg btn-block" target="_blank">
						<i class="fa fa-download"></i> Download This
					</a>
					<% } %>
					<% if('demo' in project.links) { %>
					<a href="<%= project.links.download %>" class="btn btn-primary btn-lg btn-block" target="_blank">
						<i class="fa fa-eye"></i> View A Demo
					</a>
					<% } %>
					<% if('web' in project.links) { %>
					<a href="<%= project.links.web %>" class="btn btn-default btn-lg btn-block" target="_blank">
						<i class="fa fa-globe"></i> Website
					</a>
					<% } %>
					<% if('source' in project.links) { %>
					<a href="<%= project.links.source %>" class="btn btn-default btn-lg btn-block" target="_blank">
						<i class="fa fa-github-square"></i> Source
					</a>
					<% } %>
				</div><!-- #/.project-links -->
			</div><!-- #/.row-->
		</div><!-- #/.project-body -->

	</div> <!-- #/.container -->
</section>

<% }); %>
